{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "projects": {
    "authservice": {
      "type": "application",
      "root": "apps/authservice",
      "entryFile": "main",
      "sourceRoot": "apps/authservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/authservice/tsconfig.app.json",
        "webpack": true,
        "deleteOutDir": true
      }
    },
    "orderservice": {
      "type": "application",
      "root": "apps/foodservers/orderservice",
      "entryFile": "main",
      "sourceRoot": "apps/foodservers/orderservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/foodservers/orderservice/tsconfig.app.json",
        "webpack": true,
        "deleteOutDir": true
      }
    },
    "productservice": {
      "type": "application",
      "root": "apps/foodservers/productservice",
      "entryFile": "main",
      "sourceRoot": "apps/foodservers/productservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/foodservers/productservice/tsconfig.app.json",
        "webpack": true,
        "deleteOutDir": true
      }
    },
    "userservice": {
      "type": "application",
      "root": "apps/userservice",
      "entryFile": "main",
      "sourceRoot": "apps/userservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/userservice/tsconfig.app.json",
        "webpack": true,
        "deleteOutDir": true
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    }
  }
}
